<Window x:Class="WaveRGB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveRGB"
        mc:Ignorable="d"
        Title="Wave R G B" Height="298.846" Width="307.662" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" BorderBrush="Red" Closing="Window_Closing" Foreground="{x:Null}" Icon="pack://siteoforigin:,,,/Resources/appIcon.ico">
