                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8100D1" Offset="0"/>
                    <GradientStop Color="#FF040049" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <Button x:Name="settingsUpdateBtn" Content="Resync Graphic Settings" HorizontalAlignment="Left" Margin="73,179,0,0" VerticalAlignment="Top" Width="154" Click="SettingsUpdateBtn_Click" Background="#FF8D8D8D" Foreground="#FFBAFFA3"/>
        <Label x:Name="bottomText" Content="© 2019 JΔ•Softcode    www.jdsoftcode.net" HorizontalAlignment="Left" Margin="9,234,11.2,0" VerticalAlignment="Top" Width="281" HorizontalContentAlignment="Center" Foreground="#FFA4A4A4"/>
        <Label Content="Modify ring settings in LGS Applet Customization" HorizontalAlignment="Left" Margin="12,147,0,0" VerticalAlignment="Top" Width="274" HorizontalContentAlignment="Center" Foreground="#FFA4A4A4"/>

    </Grid>
</Window>
